{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6"],
    "allowJs": false,
    "pretty": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "declaration": true,
    "declarationDir": "declarations",
    "noResolve": false,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true
  }
}

