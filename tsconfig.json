{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "module": "es6",
    "target": "es5",
    "lib": ["es6", "dom"],
    "allowJs": false,
    "pretty": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "declaration": true,
    "declarationDir": "declarations",
    "noResolve": false,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true
  },
  "filesGlob": ["src/**/*.ts", "!node_modules/**/*"],
  "exclude": ["node_modules", "tests"]
}

